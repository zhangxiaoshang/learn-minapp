.post-container {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    margin: 20rpx 0 40rpx 0;
    padding-bottom: 5px;
}
.post-author-date {
    margin: 10rpx 0 20rpx 10px;
}
.post-author {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.post-date {
    font-size: 26rpx;    
    margin-left: 20px;
    vertical-align: middle;
}
.post-title {
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-left: 10px;
    margin-bottom: 10px;
}
.post-image {
    width: 100%;
    height: 340rpx;
    margin-bottom: 15px;
}
.post-content {
    color: #666;
    font-size: 28rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
}
.post-like {
    font-size: 13px;
    line-height: 16px;
    margin-left: 10px;
}
.post-like-image {
    width: 16px;
    height: 16px;
    margin-right: 8px;
    vertical-align: middle;
}
.post-like-font {
    vertical-align: middle;
    margin-right: 20px;
}